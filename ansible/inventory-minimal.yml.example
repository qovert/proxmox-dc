---
# Minimal Inventory Example - Copy to inventory.yml and customize
# This is the simplest configuration to get started

windows_domain_controllers:
  hosts:
    dc01:
      ansible_host: 192.168.1.10
      vm_id: 200
      dc_role: primary
    dc02:
      ansible_host: 192.168.1.11
      vm_id: 201
      dc_role: additional

  vars:
    # Connection settings
    ansible_user: Administrator
    ansible_password: "{{ vault_admin_password }}"
    ansible_connection: winrm
    ansible_winrm_server_cert_validation: ignore
    ansible_port: 5985
    ansible_shell_type: powershell
    
    # Domain settings - CHANGE THESE
    domain_name: "corp.example.com"
    domain_netbios_name: "CORP"
    safe_mode_password: "{{ vault_dsrm_password }}"

all:
  vars:
    # Proxmox settings - CHANGE THESE
    proxmox_api_url: "https://YOUR-PROXMOX-HOST:8006/api2/json"
    proxmox_user: "ansible@pve"
    proxmox_password: "{{ vault_proxmox_password }}"
    proxmox_node: "YOUR-NODE-NAME"
    proxmox_tls_insecure: true
    
    # Template settings
    template_name: "windows-server-2025-template"
    template_id: 9000
